@page "/Capitulos"
@using JaponesBlazor.Component


<div class="header-bar mb-8">
    <BackButton />
    <h1 class="titulo-centrado">📘 Capítulos</h1>
    <div class="header-bar-space"></div>
</div>

<div class="capitulo-bg py-8 min-h-screen">
    <div class="max-w-xl mx-auto bg-white rounded-2xl shadow-lg p-8">

        <div class="flex flex-col gap-6">
            @foreach (var cap in capitulos)
            {
                <NavLink class="capitulo-card cursor-pointer transition-all" href="@($"Capitulo/{cap.Id}")">
                    <span class="capitulo-titulo">@cap.Titulo</span>
                </NavLink>
            }
        </div>
    </div>
</div>

@code {
    private List<CapituloModel> capitulos = new()
    {
        new CapituloModel { Id = 1, Titulo = "Capítulo 1: Saludos" },
        new CapituloModel { Id = 2, Titulo = "Capítulo 2: Verbos básicos" },
        new CapituloModel { Id = 3, Titulo = "Capítulo 3: Partículas" },
    };
}
