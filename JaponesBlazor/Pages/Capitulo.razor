@page "/Capitulo/{Id:int}"
@inject NavigationManager Nav

<div class="capitulo-bg py-8 min-h-screen">
    <div class="max-w-xl mx-auto bg-white rounded-2xl shadow-lg p-8">
        <h1 class="text-3xl font-extrabold text-blue-700 text-center mb-4 drop-shadow">📘 Capítulo @Id</h1>
        <p class="text-center text-gray-600 mb-8 text-lg">Seleccioná qué querés estudiar:</p>

        <div class="flex flex-col gap-8">
            <NavLink class="capitulo-opcion" href="@($"Capitulo/{Id}/Gramatica")">
                🧠 Gramática
            </NavLink>

            <NavLink class="capitulo-opcion" href="@($"Capitulo/{Id}/Vocabulario")">
                📚 Vocabulario
            </NavLink>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }
}