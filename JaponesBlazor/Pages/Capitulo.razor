@page "/Capitulo/{Id:int}"
@using JaponesBlazor.Component
@inject NavigationManager Nav

<div class="header-bar mb-8">
    <BackButton />
    <h1 class="titulo-centrado">📘 Capítulo @Id</h1>
    <div class="header-bar-space"></div>
</div>

<div>
    <div class="max-w-xl mx-auto">
        <p class="text-center text-gray-600 mb-8 text-lg">Seleccioná qué querés estudiar:</p>

        <div class="flex flex-col gap-8">
            <NavLink class="capitulo-opcion" href="@($"Capitulo/{Id}/Gramatica")">
                🧠 Gramática
            </NavLink>
            <NavLink class="capitulo-opcion" href="@($"Capitulo/{Id}/Vocabulario")">
                📚 Vocabulario
            </NavLink>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }
}